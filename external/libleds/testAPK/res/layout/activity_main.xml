<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/set_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/set_et1"
        android:layout_alignBottom="@+id/set_et1"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/set_et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:maxLength="2"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/set_tv1" />

    <TextView
        android:id="@+id/set_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/set_et1"
        android:layout_alignBottom="@+id/set_et1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/set_et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/set_tv2"
        android:ems="6"
        android:maxLength="6"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/set_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/set_et1"
        android:layout_alignStart="@+id/get_et" />

    <TextView
        android:id="@+id/get_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/set_bt"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/get_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:maxLength="2"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/get_tv1"
        android:layout_alignBottom="@+id/get_tv1"
        android:layout_toEndOf="@+id/get_tv1" />

    <Button
        android:id="@+id/get_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/get_et"
        android:layout_alignStart="@+id/get_et" />

    <TextView
        android:id="@+id/get_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/get_et"
        android:layout_alignBottom="@+id/get_et"
        android:layout_toEndOf="@+id/get_et" />

    <TextView
        android:id="@+id/voice_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_bt"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/voice_et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_bt"
        android:layout_toEndOf="@+id/voice_tv1"
        android:ems="2"
        android:maxLength="2"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/voice_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/voice_tv1"
        android:layout_toEndOf="@+id/set_tv2" />

    <EditText
        android:id="@+id/voice_et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/voice_et1"
        android:layout_toEndOf="@+id/voice_tv2"
        android:ems="2"
        android:maxLength="2"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/voice_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/voice_et1"
        android:layout_below="@+id/voice_et2"
        android:layout_marginTop="13dp" />

</RelativeLayout>